<script type="text/javascript">
    var canvas;
    var context;
    
    function init() {
        canvas = $("#myCanvas")[0];
        context = canvas.getContext("2d");
    }

    function drawLine() {
        //alert($("#intro")[0].innerText);
        //alert("yo adrian");
        //this doesn't work//var canvas = $("#myCanvas");
        //this works//var canvas = document.getElementById("myCanvas");
