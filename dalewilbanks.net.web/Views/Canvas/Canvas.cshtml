        //ref: http://stackoverflow.com/questions/4069982/document-getelementbyid-vs-jquery
        context.moveTo(100, 100);
        context.lineTo(100, 250);
        context.lineWidth = 10;
        context.strokeStyle = "#000FFF";
        context.lineCap = "round";
        context.stroke();
    }

