@model IEnumerable<dalewilbanks.net.entities.WorkItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Type
        </th>
        <th>
            Description
        </th>
        <th>
            Attachments
        </th>
        <th>
            EntryDate
        </th>
        <th>
            EnteredBy
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attachments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnteredBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WorkItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WorkItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WorkItemID })
        </td>
    </tr>
}

</table>
