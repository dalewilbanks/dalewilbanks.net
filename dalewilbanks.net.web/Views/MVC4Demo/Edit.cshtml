@model dalewilbanks.net.entities.WorkItem

<tr @if (Model != null) {
    @:data-pkey="@Model.WorkItemID"
}>
    <td>
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </td>
    <td>
        @Html.EditorFor(model => model.Type)
        @Html.ValidationMessageFor(model => model.Type)
    </td>
    <td>
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </td>
    <td>
        @Html.EditorFor(model => model.Attachments)
        @Html.ValidationMessageFor(model => model.Attachments)
    </td>
    <td>
        @Html.EditorFor(model => model.EntryDate)
        @Html.ValidationMessageFor(model => model.EntryDate)
    </td>
    <td>
        @Html.EditorFor(model => model.EnteredBy)
        @Html.ValidationMessageFor(model => model.EnteredBy)
    </td>
    <td>
@if (ViewContext.RouteData.Values["Action"].ToString() == "Edit") {
        <button class="editRow">Save</button><button class="cancelEditRow">Cancel</button>
} else {
        <button class="createRow">Create</button><button class="cancelCreateRow">Cancel</button>
}
    </td>
</tr>
